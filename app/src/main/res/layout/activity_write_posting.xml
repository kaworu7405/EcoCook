<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="321dp"
                android:layout_height="42dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_round"
                android:gravity="center"
                android:text="게시글 작성" />

            <EditText
                android:id="@+id/postingTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:ems="10"
                android:hint="제목을 입력해주세요"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/imgUrl"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />

                <CheckBox
                    android:id="@+id/shareCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="나눔" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="구매일자" />

                <Spinner
                    android:id="@+id/buyYearSpinner"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/buyMonthSpinner"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/buyDaySpinner"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="유통기한" />

                <Spinner
                    android:id="@+id/expiryYearSpinner"
                    android:layout_width="70dp"
                    android:layout_height="42dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/expiryMonthSpinner"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/expiryDaySpinner"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/areaText2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="지역" />

                <Spinner
                    android:id="@+id/areaSpinner1"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/areaSpinner2"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <EditText
                android:id="@+id/postingContentTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="내용을 입력해주세요 (인체에 유해하다고 판단되는 게시물은 게시가 제한될 수 있어요)"
                android:inputType="textMultiLine|textPersonName"
                android:maxLines="50"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:text="CANCEL" />

                <Button
                    android:id="@+id/writePostingBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="OK" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>